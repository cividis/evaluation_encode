import pandas as pd


configfile: "config/config.yaml"


include: "rules/prepare_data.smk"
include: "rules/motif_scan.smk"


query_experiments = pd.read_csv(config["benchmark_set"])["index_query"].unique()


rule all:
    input:
        expand(
            config["results_dir"] + "data/distances_{suffix}/{method}",
            suffix=["tss", "gene"],
            method=[
                "CCAIntegration",
                "HarmonyIntegration",
                "JointPCAIntegration",
                "RPCAIntegration",
                "FastMNNIntegration",
                "none",
            ],
        ),
        expand(
            config["results_dir"] + "motif_scan/{experiment}.bed",
            experiment=query_experiments,
        ),
